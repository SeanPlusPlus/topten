{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "overrides": [{
        "files": [
            "**/*.mocha.js",
            "**/*.test.js",
            "**/*.spec.js",
            "**/*.spec.jsx"
        ],
        "env": {
            "jest": true
        }
    }],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/jsx-indent": [2, 2],
        "react/prop-types": "off",
        "react/display-name": "off"
    }
  }